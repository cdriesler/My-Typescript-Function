{
    "compilerOptions": {
        "target": "es2024",
        "module": "esnext",
        "moduleResolution": "bundler",
        "outDir": "dist",
        "types": [
            "node"
        ],
        "paths": {
            "@/*": ["./src/*"],
        },
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
    },
    "include": ["./src/**/*"],
    "exclude": ["dist", "node_modules"]
}